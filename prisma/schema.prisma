model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  homes     Home[]   // One-to-many: A user can list many homes
  tasks     Task[]   // One-to-many: A user can have many tasks
  createdAt DateTime @default(now())
}

model Home {
  id          Int      @id @default(autoincrement())
  title       String
  address     String
  price       Int
  description String?
  listedById  Int
  listedBy    User     @relation(fields: [listedById], references: [id])
  createdAt   DateTime @default(now())
}

model Task {
  id        Int      @id @default(autoincrement())
  title     String
  completed Boolean  @default(false)
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}